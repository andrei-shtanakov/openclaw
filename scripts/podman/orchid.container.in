# Orchid gateway â€” Podman Quadlet (rootless)
# Installed by setup-podman.sh into orchid's ~/.config/containers/systemd/
# {{ORCHID_HOME}} is replaced at install time.

[Unit]
Description=Orchid gateway (rootless Podman)

[Container]
Image=orchid:local
ContainerName=orchid
UserNS=keep-id
Volume={{ORCHID_HOME}}/.orchid:/home/node/.orchid
EnvironmentFile={{ORCHID_HOME}}/.orchid/.env
Environment=HOME=/home/node
Environment=TERM=xterm-256color
PublishPort=18789:18789
PublishPort=18790:18790
Pull=never
Exec=node dist/index.js gateway --bind lan --port 18789

[Service]
TimeoutStartSec=300
Restart=on-failure

[Install]
WantedBy=default.target
