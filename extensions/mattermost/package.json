{
  "name": "@orchid/mattermost",
  "version": "2026.2.22",
  "description": "Orchid Mattermost channel plugin",
  "type": "module",
  "devDependencies": {
    "orchid": "workspace:*"
  },
  "orchid": {
    "extensions": [
      "./index.ts"
    ],
    "channel": {
      "id": "mattermost",
      "label": "Mattermost",
      "selectionLabel": "Mattermost (plugin)",
      "docsPath": "/channels/mattermost",
      "docsLabel": "mattermost",
      "blurb": "self-hosted Slack-style chat; install the plugin to enable.",
      "order": 65
    },
    "install": {
      "npmSpec": "@orchid/mattermost",
      "localPath": "extensions/mattermost",
      "defaultChoice": "npm"
    }
  }
}
